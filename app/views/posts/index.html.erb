<p style="color: green"><%= notice %></p>

<% content_for :title, "Posts" %>

<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <p>
      <%= link_to post.title, post %>
  <% end %>
</div>

<div class="content-right">
  <%= link_to "New post", new_post_path, class: "btn btn-success" %>
</div>
