<%= form_with(model: post, class: "form") do |form| %>
  <hr>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block", class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div>
    <%= form.label :body, style: "display: block", class: "form-label" %>
    <%= form.text_area :body, class: "form-control" %>
  </div>

  <div>
    <%= form.label :published, style: "display: block", class: "form-label" %>
    <%= form.check_box :published, class: "form-checkbox" %>
  </div>

  <div>
    <%= form.label :slug, style: "display: block", class: "form-label" %>
    <%= form.text_field :slug, class: "form-control" %>
  </div>

  <div>
    <%= form.submit class: "btn btn-success mt-2" %>
  </div>
  <hr>
  <hr>
<% end %>
